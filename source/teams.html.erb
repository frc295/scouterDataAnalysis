<div class="row">
  <% loops = 0 %>
  <% autonomous.first.each do |autonomous_variable| %>
    <div class="col-md-4">
      name: <%= autonomous_variable %>
      <div class="ct-chart" id="<%= autonomous_variable %>"></div>
    </div>
    <% loops += 1 %>
  <% end %>
</div>
<script>
  var options = {
    width: 300,
    height: 300
  };

  <% loops = 0 %>
  <% autonomous.first.each do |autonomous_variable| %>
    new Chartist.Line('#<%= autonomous_variable %>', {
      labels: ['1', '2', '3', '4'],
      series: [<%= autonomous[1][loops] %>]
    }, options);
    <% loops += 1 %>
  <% end %>


</script>
